# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

#order += "ipv6"
#order += "run_watch DHCP"
#order += "run_watch VPNC"
order += "wireless _first_"
order += "ethernet _first_"
order += "disk /"
order += "cpu_usage"
order += "battery 0"
order += "volume master"
order += "time"
order += "tztime local"

volume master {
    #format = "ðŸ”Š  %volume"
    format = "ðŸ•ª  %volume"
    #format_muted = "ðŸ”ˆ   %volume"
    format_muted = "ðŸ•¨  %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
    align = "center"
    min_width = 60
}

cpu_usage {
        format = "CPU %usage"
        #max_threshold = 85
        #degraded_threshold = 70
}

wireless _first_ {
        format_up = "%bitrate - %quality on '%essid' (%ip)"
        format_down = "WiFi down"
        align = "left"
}

run_watch VPNC {
        # file containing the PID of a vpnc process
        pidfile = "/var/run/vpnc/pid"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "Eth: %speed (%ip)"
        format_down = ""
}

battery 0 {
        format = "%status %percentage %remaining"
		status_chr = "âš¡ "
        #status_bat = "ðŸ”‹"
		low_threshold = 25	
        threshold_type = "time"
        hide_seconds = true
        align = "center"
        min_width = 150
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

time {
        format = "%Y-%m-%d"
}

tztime local {
        #format = "%Y-%m-%d | %H:%M"
        format = "%H:%M"
}

load {
        format = "%1min"
}

disk "/" {
        format = "â¦¾ %avail"
        prefix_type = "decimal"
}

